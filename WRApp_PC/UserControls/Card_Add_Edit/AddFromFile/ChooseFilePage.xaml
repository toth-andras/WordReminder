<UserControl x:Class="WRApp_PC.UserControls.ChooseFileTypePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WRApp_PC.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1150">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Выберите формат файла:"
                       FontSize="30"
                       Foreground="White"/>
            
            <!--Кнопки для выбора формата файла-->
            <StackPanel Orientation="Horizontal"
                        Margin="0, 200, 0, 0">
                <!--Кнопка для выбора CSV файла-->
                <Button x:Name="CsvFileButton"
                Content="CSV файл"
                Height="100"
                FontSize="20"
                Click="CsvFileButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
